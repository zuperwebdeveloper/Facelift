---
import { Image } from "astro:assets";
import interaction_section_img_1 from "../../images/solution/interaction_section_img_1.png";
import mobile_app_page2 from "../../images/solution/mobile_app_page_2.png";
---

<section class="py-12 md:pt-28 md:pb-28">
  <div class="container">
    <div class="tab-container">
      <div class="tab-buttons">
        <button class="tab-button" data-tab="1">Status Updates</button>
        <button class="tab-button" data-tab="2">Notifications & Alerts</button>
        <button class="tab-button" data-tab="3">Notes & Media</button>
        <button class="tab-button" data-tab="3">Job Level Activity</button>
        <button class="tab-button" data-tab="3">Route Notifications</button>
      </div>
      <div class="tab-content">
        <div class="tab-pane" data-tab="1">
          <Image
            src={interaction_section_img_1}
            class="me-3 align-middle object-contain w-full"
            alt="Blog Image"
          />
        </div>
        <div class="tab-pane" data-tab="2">Content for Tab 2</div>
        <div class="tab-pane" data-tab="3">Content for Tab 3</div>
      </div>
    </div>
  </div>
</section>
